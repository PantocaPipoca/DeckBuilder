generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  decks     Deck[]   @relation("UserDecks")
  createdAt DateTime @default(now())
  deckLikes   DeckLike[]
}

model Card {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  elixir      Int
  rarity      Rarity
  type        CardType
  description String
  iconUrl     String
  deckCards   DeckCard[]
  createdAt   DateTime   @default(now())

  @@index([rarity])
  @@index([type])
  @@index([elixir])
}

model Deck {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  slot        Int        // Deck slot 0-4 for user's 5 deck slots
  isPublic    Boolean    @default(false)
  likes       Int        @default(0)
  avgElixir   Float
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id], name: "UserDecks", onDelete: Cascade)
  cards       DeckCard[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deckLikes   DeckLike[]

  @@unique([ownerId, slot])
  @@index([isPublic])
  @@index([likes])
}

model DeckCard {
  id        Int      @id @default(autoincrement())
  deckId    Int
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  cardId    Int
  card      Card     @relation(fields: [cardId], references: [id])
  position  Int
  createdAt DateTime @default(now())

  @@unique([deckId, cardId])
  @@unique([deckId, position])
  @@index([deckId])
}

model DeckLike {
  id        Int      @id @default(autoincrement())
  deckId    Int
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([deckId, userId])
  @@index([deckId])
  @@index([userId])
}

enum Rarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

enum CardType {
  TROOP
  SPELL
  BUILDING
}